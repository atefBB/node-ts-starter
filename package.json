        "express": "^4.17.3",
        "module-alias": "^2.2.2",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0",
        "tslib": "~2.3.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
